<Window x:Class="CTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vms="clr-namespace:CTP.core"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="MainWindow" Height="750" Width="1200">
    <Window.DataContext>
        <vms:ViewModel />
    </Window.DataContext>
    <StackPanel>
        <TabControl Name="tab_kontrolki">
            <TabItem Header="Konfiguracja" FontSize="16" Width="120" Height="35">
                <Grid Height="690">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button x:Name="FilePickerButton" Content="Wybierz plik" Margin="44,80,165,233" Click="FilePickerButton_Click" FontSize="16"/>
                    <lvc:CartesianChart
                        SyncContext="{Binding Sync}"
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}" Height="384" Width="750" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,296" HorizontalAlignment="Left" Grid.RowSpan="2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="348" FontSize="16" FontWeight="Bold"><Run Language="pl-pl" Text="Wprowadź rodzaj urządzenia pomiarowego"/></TextBlock>
                    <TextBlock HorizontalAlignment="Center" Margin="0,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="309" FontSize="16" FontWeight="Bold"><Run Language="pl-pl" Text="Wczytaj pomiar z pliku"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="44,216,0,0" TextWrapping="Wrap" Text="Urządzenie" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Opacity="0.4"/>
                    <TextBlock HorizontalAlignment="Center" Margin="0,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="310" FontSize="16" FontWeight="Bold"><Run Text="Wprowadź "/><Run Language="pl-pl" Text="zakres pomiarowy"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="44,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="368" FontSize="16" Grid.Row="1" FontWeight="Bold" Grid.ColumnSpan="2"><Run Text="Wprowadź "/><Run Language="pl-pl" Text="zakres sygnału wyjściowego [V]"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="79,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" TextChanged="TextBox_TextChanged" Opacity="0.4" Grid.Row="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" FontSize="16" Grid.Row="1"><Run Language="pl-pl" Text="od"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="180,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" TextChanged="TextBox_TextChanged" Opacity="0.4" Grid.Row="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="145,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" FontSize="16" Grid.Row="1"><Run Language="pl-pl" Text="do"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="79,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" TextChanged="TextBox_TextChanged" Opacity="0.4" Grid.RowSpan="2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" FontSize="16" Grid.RowSpan="2"><Run Language="pl-pl" Text="od"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="180,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" TextChanged="TextBox_TextChanged" Opacity="0.4" Grid.RowSpan="2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="145,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" FontSize="16" Grid.RowSpan="2"><Run Language="pl-pl" Text="do"/></TextBlock>
                    <Button x:Name="Generuj_wykresy" Content="Generuj wykresy ruchu" Margin="44,255,44,58" Click="FilePickerButton_Click" FontSize="16" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <TabItem Header="Wykresy ruchu" FontSize="16" Width="120" Height="35">
                <Grid Height="690">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button x:Name="FilePickerButton2" Content="Drukuj PDF" Margin="36,262,161,52" Click="FilePDFButton_Click" FontSize="16" Grid.Row="1"/>
                    <lvc:CartesianChart
                        SyncContext="{Binding Sync}"
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}" Height="384" Width="750" Grid.Column="1" Margin="10,10,0,296" HorizontalAlignment="Left" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="309" FontSize="16" FontWeight="Bold"><Run Language="pl-pl" Text="R"/><Run Text="odzaj urządzenia pomiarowego"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="36,85,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="309" FontSize="16" FontWeight="Bold"><Run Language="pl-pl" Text="Zakres pomiarowy:"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="36,190,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="37,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="310" FontSize="16" Grid.Row="1" FontWeight="Bold"><Run Text="Dane klienta"/><Run Language="pl-pl" Text=":"/></TextBlock>
                    <TextBox HorizontalAlignment="Left" Margin="36,100,0,0" TextWrapping="Wrap" Text="Imię i nazwisko" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Opacity="0.4" Grid.Row="1"/>
                    <TextBlock HorizontalAlignment="Left" Margin="36,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="309" FontSize="16" FontWeight="Bold"><Run Language="pl-pl" Text="Zakres sygnału wyjściowego:"/></TextBlock>
                    <TextBlock HorizontalAlignment="Left" Margin="36,294,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                    <DatePicker HorizontalAlignment="Left" Margin="36,143,0,0" Grid.Row="1" VerticalAlignment="Top" Opacity="0.4"/>
                </Grid>
            </TabItem>


            <TabItem Header="IDK" FontSize="16" Height="35" Width="120" />
        </TabControl>
    </StackPanel>
</Window>
