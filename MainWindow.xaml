<Window x:Class="CTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LineChart"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <StackPanel>
        <Button x:Name="FilePickerButton" Content="Wybierz plik" Margin="5" Width="100" Click="FilePickerButton_Click"></Button>
        <Button x:Name="ChartDisplayButton" Content="Rysuj wykres" Margin="5" Width="100" Command="{Binding StartChartCommand}"></Button>
        <Label x:Name="FilePathDisplay" HorizontalAlignment="Center" Content=""></Label>
        <Label x:Name="FileContentDisplay" HorizontalAlignment="Center" Content=""></Label>
        <lvc:CartesianChart x:Name="chartxd" Series="{Binding Series}" XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"  EasingFunction="{x:Null}" UpdaterThrottler="00:00:00.050" HorizontalAlignment="Center" Height="297" Width="750" ></lvc:CartesianChart>
    </StackPanel>
</Window>
